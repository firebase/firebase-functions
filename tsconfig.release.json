{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["es2022"],
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "lib/cjs",
    "stripInternal": true,
    "target": "es2022",
    "useDefineForClassFields": false,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}